algoritmo "SOMA ENTRE 2 NUMEROS"
var
   n1, n2, soma : inteiro
inicio
   EscrevaL("======== CALCULO DE DOIS NUMEROS ========")
   EscrevaL("DIGITE UM NUMERO")
   Leia(n1)
   Escreval("DIGITE MAIS UM NUMERO")
   Leia(n2)
   soma <- n1+n2
   Escreval("A SOMA DOS DOIS NUMEROS É ", soma)
   Escreval("======== FIM DO PROGRAMA ========")
fimalgoritmo