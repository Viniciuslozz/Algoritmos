algoritmo "Exercicio - 6 antecessor e sucessor"
var
   ant, suc, numero: inteiro
inicio
   Escreval("Leitor de antecessor e sucessor de um numero")
   Escreval("Bem vindo. Digite um numero, por favor!")
   Leia(numero)
   ant <- (numero - 1)
   suc<- (numero +1)
   Escreval("O antecessor do numero digitado é:", ant)
   Escreval("E o sucessor do numero digitado é:", suc)
fimalgoritmo