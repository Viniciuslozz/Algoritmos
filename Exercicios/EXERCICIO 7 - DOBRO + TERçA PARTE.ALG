algoritmo "Exercicio 7 - Dobro + terça parte"
var
num, db, tp: real
inicio
      Escreval("Calculadora dobro + terça parte")
      Escreval("Digite um numero: ")
      Leia(num)
      db <- (num *2)
      tp <- (num /3)
      Escreval("O dobro de", num, " é igual a:", db)
      Escreval("E a terça parte de", num, " é igual a: ", tp:5:2)
fimalgoritmo