algoritmo "Exercicio 4 - Somatorio"
var
   n1, n2, soma : real
inicio
   Escreval("======== Calculadora de dois números ========")
   Escreval("Digite o primeiro valor: ")
   Leia(n1)
   Escreval("Digite o segundo valor: ")
   Leia(n2)
   soma <- (n1+n2)
   Escreval("A soma de", n1, " e", n2, " é:", soma)
fimalgoritmo